<% content_for(:title) { "JA全顧客マスタ インポート" } %>

<div class="max-w-2xl mx-auto space-y-6">
  <h2 class="text-2xl font-bold text-gray-800">JA全顧客マスタ インポート</h2>

  <!-- インポートフォーム -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">CSVファイルをアップロード</h3>

    <%= form_with url: admin_ja_customer_imports_path, method: :post, multipart: true, local: true, class: 'space-y-4' do %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">ファイル選択</label>
        <input type="file" name="file" accept=".csv,.xlsx,.xls"
               class="block w-full text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100">
        <p class="text-xs text-gray-500 mt-1">CSV形式（Shift_JIS または UTF-8）</p>
      </div>

      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <h4 class="font-medium text-yellow-800 mb-2">注意事項</h4>
        <ul class="text-sm text-yellow-700 list-disc list-inside space-y-1">
          <li>大量データ（36,000件）のインポートは数分かかる場合があります</li>
          <li>既存データは顧客番号をキーに更新されます</li>
          <li>インポート完了後、メールで通知されます</li>
        </ul>
      </div>

      <div class="flex justify-end">
        <%= submit_tag 'インポート開始', class: 'bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg cursor-pointer' %>
      </div>
    <% end %>
  </div>

  <!-- CSVフォーマット -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">CSVフォーマット</h3>
    <div class="overflow-x-auto">
      <table class="text-sm">
        <thead>
          <tr class="bg-gray-50">
            <th class="px-3 py-2 text-left">カラム名</th>
            <th class="px-3 py-2 text-left">必須</th>
            <th class="px-3 py-2 text-left">説明</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <tr><td class="px-3 py-2">顧客番号</td><td class="px-3 py-2 text-red-500">必須</td><td class="px-3 py-2">一意のキー</td></tr>
          <tr><td class="px-3 py-2">世帯番号</td><td class="px-3 py-2">-</td><td class="px-3 py-2"></td></tr>
          <tr><td class="px-3 py-2">氏名</td><td class="px-3 py-2 text-red-500">必須</td><td class="px-3 py-2"></td></tr>
          <tr><td class="px-3 py-2">氏名カナ</td><td class="px-3 py-2">-</td><td class="px-3 py-2"></td></tr>
          <tr><td class="px-3 py-2">生年月日</td><td class="px-3 py-2">-</td><td class="px-3 py-2">YYYY-MM-DD形式</td></tr>
          <tr><td class="px-3 py-2">郵便番号</td><td class="px-3 py-2">-</td><td class="px-3 py-2"></td></tr>
          <tr><td class="px-3 py-2">住所</td><td class="px-3 py-2">-</td><td class="px-3 py-2"></td></tr>
          <tr><td class="px-3 py-2">電話番号</td><td class="px-3 py-2">-</td><td class="px-3 py-2"></td></tr>
          <tr><td class="px-3 py-2">支店コード</td><td class="px-3 py-2">-</td><td class="px-3 py-2">支店マスタのコード</td></tr>
          <tr><td class="px-3 py-2">預金残高</td><td class="px-3 py-2">-</td><td class="px-3 py-2">数値</td></tr>
          <tr><td class="px-3 py-2">貸出残高</td><td class="px-3 py-2">-</td><td class="px-3 py-2">数値</td></tr>
          <tr><td class="px-3 py-2">金融取引</td><td class="px-3 py-2">-</td><td class="px-3 py-2">1=あり</td></tr>
          <tr><td class="px-3 py-2">共済加入</td><td class="px-3 py-2">-</td><td class="px-3 py-2">1=あり</td></tr>
          <tr><td class="px-3 py-2">営農取引</td><td class="px-3 py-2">-</td><td class="px-3 py-2">1=あり</td></tr>
          <tr><td class="px-3 py-2">葬祭加入</td><td class="px-3 py-2">-</td><td class="px-3 py-2">1=あり</td></tr>
          <tr><td class="px-3 py-2">ガス契約</td><td class="px-3 py-2">-</td><td class="px-3 py-2">1=あり</td></tr>
          <tr><td class="px-3 py-2">不動産取引</td><td class="px-3 py-2">-</td><td class="px-3 py-2">1=あり</td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- インポート履歴 -->
  <% if @import_history.present? %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">インポート履歴</h3>
      <table class="w-full text-sm">
        <thead>
          <tr class="bg-gray-50">
            <th class="px-3 py-2 text-left">日時</th>
            <th class="px-3 py-2 text-left">ファイル</th>
            <th class="px-3 py-2 text-right">追加</th>
            <th class="px-3 py-2 text-right">更新</th>
            <th class="px-3 py-2 text-right">エラー</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @import_history.each do |log| %>
            <tr>
              <td class="px-3 py-2"><%= log.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td class="px-3 py-2"><%= log.filename %></td>
              <td class="px-3 py-2 text-right"><%= log.imported_count %></td>
              <td class="px-3 py-2 text-right"><%= log.updated_count %></td>
              <td class="px-3 py-2 text-right text-red-500"><%= log.error_count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
