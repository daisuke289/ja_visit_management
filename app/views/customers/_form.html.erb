<%= form_with model: customer, class: 'space-y-6' do |f| %>
  <% if customer.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h4 class="font-bold">エラーがあります</h4>
      <ul class="list-disc list-inside mt-2">
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :customer_number, '顧客番号', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :customer_number, class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500', required: true %>
        <p class="text-xs text-gray-500 mt-1">JA基幹システムの顧客番号を入力</p>
      </div>

      <div>
        <%= f.label :household_number, '世帯番号', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :household_number, class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500' %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :name, '氏名', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :name, class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500', required: true %>
      </div>

      <div>
        <%= f.label :name_kana, '氏名カナ', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :name_kana, class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500' %>
      </div>
    </div>

    <% if current_user.can_access_all_branches? %>
      <div>
        <%= f.label :branch_id, '担当支店', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.collection_select :branch_id, Branch.ordered, :id, :name,
            { prompt: '選択してください' },
            { class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500', required: true } %>
      </div>
    <% else %>
      <input type="hidden" name="customer[branch_id]" value="<%= current_user.branch_id %>">
    <% end %>

    <div>
      <%= f.label :phone, '電話番号', class: 'block text-sm font-medium text-gray-700 mb-1' %>
      <%= f.text_field :phone, class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= f.label :postal_code, '郵便番号', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :postal_code, class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500', placeholder: '000-0000' %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :address, '住所', class: 'block text-sm font-medium text-gray-700 mb-1' %>
        <%= f.text_field :address, class: 'w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500' %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to 'キャンセル', customers_path, class: 'px-4 py-2 text-gray-600 hover:text-gray-800' %>
    <%= f.submit customer.persisted? ? '更新する' : '登録する',
        class: 'bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg cursor-pointer' %>
  </div>
<% end %>
