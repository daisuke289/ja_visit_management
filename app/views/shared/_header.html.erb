<header class="bg-green-700 text-white shadow-lg">
  <div class="flex items-center justify-between px-4 md:px-6 py-3">
    <div class="flex items-center space-x-4">
      <!-- ハンバーガーメニューボタン（モバイル用） -->
      <button type="button"
              data-controller="sidebar"
              data-action="click->sidebar#toggle"
              class="md:hidden p-2 rounded hover:bg-green-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>

      <h1 class="text-lg md:text-xl font-bold">
        <%= link_to 'JA訪問管理', root_path, class: 'hover:text-green-200' %>
      </h1>
      <% if current_user.branch.present? %>
        <span class="hidden md:inline text-green-200 text-sm">
          <%= current_user.branch.name %>
        </span>
      <% end %>
    </div>

    <div class="flex items-center space-x-2 md:space-x-4">
      <span class="text-sm hidden sm:inline">
        <%= current_user.name %>
        <span class="text-green-200 hidden md:inline">
          (<%= I18n.t("activerecord.enums.user.role.#{current_user.role}") %>)
        </span>
      </span>
      <%= button_to 'ログアウト', destroy_user_session_path, method: :delete,
          class: 'bg-green-600 hover:bg-green-500 px-3 py-1 rounded text-sm' %>
    </div>
  </div>
</header>
