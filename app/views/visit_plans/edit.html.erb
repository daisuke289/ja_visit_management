<% content_for(:title) { '訪問計画を編集' } %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-800">訪問計画を編集</h2>
    <p class="text-gray-500 mt-1">
      <%= link_to @customer.name, customer_path(@customer), class: 'text-blue-600 hover:underline' %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= render 'form' %>
  </div>

  <% if @visit_plan.visit_record.present? %>
    <div class="mt-4 bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded">
      <p class="text-sm">
        この計画には訪問記録が紐付いています。
        <%= link_to '訪問記録を表示', customer_visit_record_path(@customer, @visit_plan.visit_record), class: 'underline' %>
      </p>
    </div>
  <% end %>
</div>
