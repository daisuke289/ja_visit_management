<% content_for(:title) { "ダッシュボード - #{current_user.branch&.name}" } %>

<div class="space-y-6">
  <h2 class="text-2xl font-bold text-gray-800">支店ダッシュボード</h2>

  <!-- 統計カード -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500">重要取引先数</div>
      <div class="text-3xl font-bold text-gray-800"><%= @customer_count %></div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500">訪問率（30日）</div>
      <div class="text-3xl font-bold text-green-600"><%= @visit_rate %>%</div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500">期限切れアクション</div>
      <div class="text-3xl font-bold text-red-600"><%= @overdue_count %></div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500">今週の訪問予定</div>
      <div class="text-3xl font-bold text-blue-600"><%= @upcoming_plans&.size || 0 %></div>
    </div>
  </div>

  <!-- グラフセクション -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- 週間訪問件数推移 -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800">週間訪問件数推移（過去12週）</h3>
      </div>
      <div class="p-6">
        <%= line_chart @weekly_visits, xtitle: "週", ytitle: "訪問件数", colors: ["#3B82F6"] %>
      </div>
    </div>

    <!-- 訪問種別別件数 -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800">訪問種別（過去30日）</h3>
      </div>
      <div class="p-6">
        <%= pie_chart @visits_by_type, donut: true, legend: "bottom" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- 未訪問30日超 -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-red-600">未訪問30日超</h3>
      </div>
      <div class="p-6">
        <% if @unvisited_30days.present? %>
          <ul class="divide-y divide-gray-200">
            <% @unvisited_30days.each do |customer| %>
              <li class="py-3">
                <%= link_to customer, class: 'flex justify-between items-center hover:bg-gray-50 -mx-2 px-2 rounded' do %>
                  <span class="font-medium text-gray-800"><%= customer.name %></span>
                  <span class="text-sm text-gray-500">
                    <% if customer.last_visit_date %>
                      <%= customer.days_since_last_visit %>日前
                    <% else %>
                      未訪問
                    <% end %>
                  </span>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-500 text-center py-4">該当なし</p>
        <% end %>
      </div>
    </div>

    <!-- 期限切れアクション -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-orange-600">期限切れアクション</h3>
      </div>
      <div class="p-6">
        <% if @overdue_actions.present? %>
          <ul class="divide-y divide-gray-200">
            <% @overdue_actions.each do |action| %>
              <li class="py-3">
                <div class="flex justify-between items-center">
                  <div>
                    <span class="font-medium text-gray-800"><%= action.title %></span>
                    <span class="text-sm text-gray-500 ml-2">(<%= action.customer.name %>)</span>
                  </div>
                  <span class="text-sm text-red-500">
                    <%= action.due_date.strftime('%m/%d') %>期限
                  </span>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-500 text-center py-4">該当なし</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 今週の訪問予定 -->
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-blue-600">今週の訪問予定</h3>
    </div>
    <div class="p-6">
      <% if @upcoming_plans.present? %>
        <table class="w-full">
          <thead>
            <tr class="text-left text-sm text-gray-500 border-b">
              <th class="pb-2">予定日</th>
              <th class="pb-2">取引先</th>
              <th class="pb-2">種別</th>
              <th class="pb-2">目的</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_plans.each do |plan| %>
              <tr class="hover:bg-gray-50">
                <td class="py-3"><%= plan.planned_date.strftime('%m/%d (%a)') %></td>
                <td class="py-3">
                  <%= link_to plan.customer.name, plan.customer, class: 'text-blue-600 hover:underline' %>
                </td>
                <td class="py-3"><%= plan.visit_type&.name %></td>
                <td class="py-3 text-sm text-gray-500"><%= truncate(plan.purpose, length: 30) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-gray-500 text-center py-4">今週の訪問予定はありません</p>
      <% end %>
    </div>
  </div>
</div>
