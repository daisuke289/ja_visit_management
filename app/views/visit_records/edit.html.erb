<% content_for(:title) { '訪問記録を編集' } %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-800">訪問記録を編集</h2>
    <p class="text-gray-500 mt-1">
      <%= link_to @customer.name, customer_path(@customer), class: 'text-blue-600 hover:underline' %>
      | <%= @visit_record.visited_at&.strftime('%Y/%m/%d') %>
    </p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= render 'form' %>
  </div>

  <% if @visit_record.actions.any? %>
    <div class="mt-4 bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded">
      <p class="font-medium text-sm">この記録から作成された次アクション:</p>
      <ul class="mt-2 text-sm">
        <% @visit_record.actions.each do |action| %>
          <li>
            <%= action.title %> (期限: <%= action.due_date&.strftime('%Y/%m/%d') %>)
            <span class="text-gray-500">- <%= action.due_status_label %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
