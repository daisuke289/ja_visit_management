{
  "permissions": {
    "allow": [],
    "deny": [
      "Bash(sudo:)",
      "Bash(rm:)",
      "Bash(rm -rf:)",
      "Read(.env.)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(/token)",
      "Read(/key)",
      "Write(.env)",
      "Write(/secrets/)",
      "Bash(curl:)",
      "Bash(wget:)",
      "Bash(nc:)",
      "Bash(npm uninstall:)",
      "Bash(npm remove:)",
      "Bash(psql:)",
      "Bash(mysql:)",
      "Bash(mongod:)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "./script/auto_commit_push.sh"
          }
        ]
      }
    ]
  }
}